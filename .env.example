# Nexus COS Extended - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=nexus_cos_extended
POSTGRES_USER=nexus_admin
POSTGRES_PASSWORD=nexus_secure_password_change_me
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=nexus_redis_password_change_me

# ===========================================
# KEI AI INTEGRATION
# ===========================================
KEI_AI_KEY=22181f6d296ef1bebb7fa8e9ea85ae22
KEI_AI_ENDPOINT=https://api.kei-ai.com
KEI_AI_VERSION=v1

# ===========================================
# DOMAIN AND DEPLOYMENT
# ===========================================
DOMAIN=nexuscos.online
DEPLOY_PATH=/opt/nexus-cos
BASE_URL=https://nexuscos.online
API_BASE_URL=https://api.nexuscos.online

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
JWT_SECRET=nexus_jwt_super_secret_key_change_me_to_something_very_secure
ENCRYPTION_KEY=your_encryption_key_32_characters_long
SESSION_SECRET=your_session_secret_key_here

# ===========================================
# STRIPE PAYMENT INTEGRATION
# ===========================================
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ===========================================
# OTT FRONTEND CONFIGURATION
# ===========================================
OTT_FRONTEND_PORT=3000
OTT_FRONTEND_HOST=0.0.0.0
OTT_CDN_URL=https://cdn.nexuscos.online
OTT_STREAMING_URL=https://stream.nexuscos.online

# ===========================================
# PUABOVERSE CONFIGURATION
# ===========================================
PUABOVERSE_PORT=3001
PUABOVERSE_HOST=0.0.0.0
PUABOVERSE_SSO_SECRET=your_puaboverse_sso_secret_here

# ===========================================
# CREATOR HUB CONFIGURATION
# ===========================================
CREATOR_HUB_PORT=3002
CREATOR_HUB_HOST=0.0.0.0
CREATOR_HUB_UPLOAD_PATH=/uploads
CREATOR_HUB_MAX_FILE_SIZE=100MB

# ===========================================
# V-SUITE CONFIGURATION
# ===========================================
V_HOLLYWOOD_STUDIO_PORT=3003
V_SCREEN_PORT=3004
V_STAGE_PORT=3005
V_CASTER_PRO_PORT=3006
V_PROMPTER_PRO_PORT=3007

# V-Suite shared configuration
V_SUITE_HOST=0.0.0.0
V_SUITE_RENDER_QUALITY=high
V_SUITE_MAX_CONCURRENT_RENDERS=5

# ===========================================
# BOOM BOOM ROOM LIVE CONFIGURATION
# ===========================================
BOOM_BOOM_ROOM_PORT=3008
BOOM_BOOM_ROOM_HOST=0.0.0.0
BOOM_BOOM_ROOM_WEBSOCKET_PORT=3009
BOOM_BOOM_ROOM_MAX_USERS=1000

# ===========================================
# NEXUS COS STUDIO AI CONFIGURATION
# ===========================================
STUDIO_AI_PORT=3010
STUDIO_AI_HOST=0.0.0.0
STUDIO_AI_WORKSPACE_PATH=/workspaces
STUDIO_AI_MAX_PROJECTS=50

# ===========================================
# LEGACY OAUTH CONFIGURATION
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ===========================================
# AWS CONFIGURATION (for Content Management)
# ===========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=nexus-cos-content

# ===========================================
# AI SERVICE CONFIGURATION
# ===========================================
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_SERVICE_ACCOUNT_KEY=/path/to/google-service-account.json

# ===========================================
# LEGACY FRONTEND CONFIGURATION
# ===========================================
REACT_APP_API_URL=http://localhost:3001
REACT_APP_AUTH_URL=http://localhost:3041
REACT_APP_CONTENT_URL=http://localhost:3042
REACT_APP_STREAMING_URL=http://localhost:3043
REACT_APP_AI_URL=http://localhost:3044

# ===========================================
# NGINX CONFIGURATION
# ===========================================
NGINX_PORT=80
NGINX_SSL_PORT=443
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# ===========================================
# MONITORING AND LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# ===========================================
# GRAFANA MONITORING
# ===========================================
GRAFANA_PORT=3011
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_change_me

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGIN=http://localhost:3000

# ===========================================
# SSL CONFIGURATION (for production)
# ===========================================
SSL_CERT_PATH=/etc/ssl/certs/nexuscos.crt
SSL_KEY_PATH=/etc/ssl/private/nexuscos.key
SSL_ENABLED=true

# ===========================================
# PRODUCTION URLs (for VPS deployment)
