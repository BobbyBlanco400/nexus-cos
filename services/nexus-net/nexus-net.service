[Unit]
Description=Nexus-/Net Service
After=network.target

[Service]
Type=simple
User=nexus
WorkingDirectory=/opt/nexus-cos-main/deployed-services/nexus-net
ExecStart=/usr/bin/node server.js
Restart=on-failure
RestartSec=10
Environment="NODE_ENV=production"
Environment="NEXUS_NET_PORT=3100"

[Install]
WantedBy=multi-user.target
