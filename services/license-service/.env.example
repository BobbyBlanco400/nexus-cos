# License Service Environment Variables

# Server Configuration
PORT=3099
NODE_ENV=production

# JWT Secret for license token signing
# IMPORTANT: Change this in production!
JWT_SECRET=nexus-cos-license-secret-change-in-production

# Admin key for generating new license tokens
# IMPORTANT: Change this in production!
ADMIN_KEY=admin-secret-key-change-in-production

# License Configuration
LICENSE_LICENSEE=THIIO
LICENSE_ID=THIIO-NEXUS-COS-2025-001
LICENSE_TYPE=perpetual

# Feature Flags
FEATURE_CORE_SERVICES=true
FEATURE_NEXUS_VISION=true
FEATURE_PUABOVERSE=true
FEATURE_ALL_MODULES=true
FEATURE_UPDATES=true

# Restrictions
OFFLINE_MODE_ENABLED=true
UPDATE_GATING_ONLY=true
NO_FORCED_ONLINE_CHECKS=true
