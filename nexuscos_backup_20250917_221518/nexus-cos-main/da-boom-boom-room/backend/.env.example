# Da Boom Boom Room Live! - Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/da-boom-boom-room
# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/da-boom-boom-room?retryWrites=true&w=majority
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key
JWT_REFRESH_EXPIRE=30d

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_SUCCESS_URL=http://localhost:3000/subscription/success
STRIPE_CANCEL_URL=http://localhost:3000/subscription/cancel

# Subscription Tier Price IDs (Stripe)
STRIPE_PRICE_FLOOR_PASS=price_your_floor_pass_price_id
STRIPE_PRICE_BACKSTAGE_PASS=price_your_backstage_pass_price_id
STRIPE_PRICE_VIP_LOUNGE=price_your_vip_lounge_price_id
STRIPE_PRICE_CHAMPAGNE_ROOM=price_your_champagne_room_price_id
STRIPE_PRICE_BLACK_CARD=price_your_black_card_price_id

# Streaming Configuration
STREAMING_SERVER_URL="wss://localhost:8080"
VR_STREAMING_ENABLED=true
MAX_CONCURRENT_STREAMS=100
STREAM_QUALITY_OPTIONS="720p,1080p,4K"

# Virtual Tipping Configuration
MIN_TIP_AMOUNT=1
MAX_TIP_AMOUNT=1000
TIP_PROCESSING_FEE=0.029
PERFORMER_PAYOUT_PERCENTAGE=0.70
PLATFORM_FEE_PERCENTAGE=0.30

# VR Configuration
VR_ENABLED=true
VR_STREAM_BITRATE=8000
VR_RESOLUTION="4096x2048"
VR_FRAME_RATE=60

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="puaboverse@gmail.com"
SMTP_PASS="your_app_password_here"
FROM_EMAIL="noreply@daboomroom.com"

# File Upload Configuration
UPLOAD_MAX_SIZE=50MB
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,video/mp4,video/webm"
UPLOAD_DESTINATION="./uploads"
CDN_URL="https://cdn.daboomroom.com"

# Security Configuration
SESSION_SECRET="daboomroom_session_secret_key"
ENCRYPTION_KEY="daboomroom_encryption_key_32_chars"
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"
LOG_MAX_SIZE="10m"
LOG_MAX_FILES="5"

# NFT Configuration (Placeholder)
NFT_ENABLED=false
NFT_CONTRACT_ADDRESS="0x..."
NFT_NETWORK="ethereum"
NFT_PROVIDER_URL="https://mainnet.infura.io/v3/your_project_id"

# Analytics Configuration
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
MIXPANEL_TOKEN="your_mixpanel_token"

# Monitoring Configuration
SENTRY_DSN="https://your_sentry_dsn_here"
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_KEYS=1000

# WebRTC Configuration
WEBRTC_STUN_SERVERS="stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302"
WEBRTC_TURN_SERVERS="turn:your-turn-server.com:3478"
WEBRTC_TURN_USERNAME="your_turn_username"
WEBRTC_TURN_PASSWORD="your_turn_password"

# Development Configuration
DEBUG_MODE=true
API_DOCS_ENABLED=true
SWAGGER_UI_ENABLED=true

# Production Configuration (Override in production)
# NODE_ENV=production
# DEBUG_MODE=false
# API_DOCS_ENABLED=false
# SWAGGER_UI_ENABLED=false