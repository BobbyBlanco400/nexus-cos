# TRAE Solo Environment Configuration
# Multi-Phase Launch Environment Settings for Nexus COS

# Launch Phase Configuration
LAUNCH_PHASE=auto  # auto-detect based on date, or override with: beta, production
BETA_START_DATE=2025-10-01T00:00:00Z
PRODUCTION_TRANSITION_DATE=2025-11-17T00:00:00Z

# Database Configuration
DATABASE_URL=postgresql://nexus_user:nexus_password@localhost:5432/nexus_cos
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=nexus_cos
DATABASE_USER=nexus_user
DATABASE_PASSWORD=nexus_password

# Backend Configuration
BACKEND_NODE_PORT=3000
BACKEND_PYTHON_PORT=3001

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Beta Environment Configuration
BETA_DOMAIN=beta.nexuscos.online
BETA_SSL_CERT_PATH=/etc/ssl/ionos/beta.nexuscos.online/fullchain.pem
BETA_SSL_KEY_PATH=/etc/ssl/ionos/beta.nexuscos.online/privkey.pem
BETA_VITE_API_URL=https://beta.nexuscos.online/api
BETA_VITE_NODE_API_URL=https://beta.nexuscos.online/api/node
BETA_VITE_PYTHON_API_URL=https://beta.nexuscos.online/api/python

# Production Environment Configuration
PRODUCTION_DOMAIN=nexuscos.online
PRODUCTION_SSL_CERT_PATH=/etc/ssl/ionos/nexuscos.online/fullchain.pem
PRODUCTION_SSL_KEY_PATH=/etc/ssl/ionos/nexuscos.online/privkey.pem
PRODUCTION_VITE_API_URL=https://nexuscos.online/api
PRODUCTION_VITE_NODE_API_URL=https://nexuscos.online/api/node
PRODUCTION_VITE_PYTHON_API_URL=https://nexuscos.online/api/python

# SSL/TLS Configuration
SSL_EMAIL=admin@nexuscos.online
SSL_PROVIDER_BETA=IONOS
SSL_PROVIDER_PRODUCTION=IONOS

# CDN Configuration
CDN_PROVIDER=CloudFlare
CDN_MODE=Full (Strict)
CDN_EDGE_LOCATIONS=global

# Monitoring Configuration
LOG_LEVEL_BETA=info
LOG_LEVEL_PRODUCTION=warn
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Rate Limiting (Production Only)
RATE_LIMIT_API_ZONE=10m
RATE_LIMIT_API_RATE=10r/s
RATE_LIMIT_LOGIN_ZONE=10m
RATE_LIMIT_LOGIN_RATE=1r/s

# Resource Configuration
MAX_CONNECTIONS_BETA=1000
MAX_CONNECTIONS_PRODUCTION=5000
WORKER_PROCESSES_BETA=2
WORKER_PROCESSES_PRODUCTION=auto
CLIENT_MAX_BODY_SIZE_BETA=100M
CLIENT_MAX_BODY_SIZE_PRODUCTION=200M

# Mobile Build Configuration
ANDROID_SDK_PATH=/opt/android-sdk
IOS_PROVISIONING_PROFILE=nexus-cos-profile

# Backup Configuration
BACKUP_FREQUENCY=daily
BACKUP_RETENTION=30d
BACKUP_DESTINATIONS=local:/backup/nexus-cos,cloud:s3://nexus-cos-backups